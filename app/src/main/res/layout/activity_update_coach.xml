<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_fanhuiAdd"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/zuojiantou"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改课程信息"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓名："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addCoachName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="请输入姓名"
                android:text="王鹏"
                android:textColor="#000"
                android:background="@drawable/bg_edit"/>
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日期："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addCoachAge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:textColor="#000"
                android:text="2024-04-01"
                android:hint="请输入年龄"
                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="时间："
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edt_addCoachSpecialty"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:hint="15:00"
                android:textColor="#000"
                android:background="@drawable/bg_edit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="空闲时段："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/edt_addCoachInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#BFBFBF"
                android:textSize="20dp"
                android:hint="请输入详细介绍"
                android:text="16:00-17:00 18:00-19:00 19:00-20:00"
                android:textColor="#BFBFBF" />
        </LinearLayout>
    <Button
        android:id="@+id/btn_Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成修改"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonstyle"
        android:layout_gravity="center"/>
</LinearLayout>